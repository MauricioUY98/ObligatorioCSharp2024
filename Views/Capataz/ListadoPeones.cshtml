@{
}

@using Dominio
@model List<Peon>

<h1 class="text-center mb-3"> Listado de Peones</h1>

<table class="table">
    <thead> 
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Fecha Ingreso</th>
            <th scope="col">Residencia</th>
            <th scope="col">Tareas</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Peon p in Model)
        {
            <tr>
                <td scope="col">@p.Nombre</td>
                <td scope="col">@p.FechaIngreso.ToString("dd/MM/yyyy")</td>
                <td scope="col">@p.Residente</td>
                <td scope="col">@Html.ActionLink("Ver Tareas", "MostrarTareaPeon", "Capataz", new {Mail = p.Mail})</td>
            </tr>
        }
    </tbody>
</table>