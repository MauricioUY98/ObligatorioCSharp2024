@{
}

@using Dominio
@model Capataz

<div class="text-center">
    <h1 class="display-4"> Bienvenido @Model.Nombre</h1>
</div>

<div class="mb-2 border-0 col-6  mx-auto">
    <strong>
        <label class="form-label">Nombre</label>
    </strong>
    <input class="form-control" value="@Model.Nombre" disabled/>
</div>
<div class="mb-2 border-0 col-6  mx-auto">
    <strong>
        <label class="form-label">Email</label>
    </strong>
    <input class="form-control" value="@Model.Mail" disabled />
</div>
<div class="mb-2 border-0 col-6  mx-auto">
    <strong>
        <label class="form-label">Fecha de Ingreso</label>
    </strong>
    <input class="form-control" value="@Model.FechaIngreso.ToString("dd/MM/yyyy")" disabled />
</div>
<div class="mb-2 border-0 col-6  mx-auto">
    <strong><label class="form-label">Personas a cargo</label></strong>
    @foreach(Peon p in Model.CantPersonas)
    {
        <ul>
            <li>@p.Nombre</li>
        </ul>
    }
</div>

