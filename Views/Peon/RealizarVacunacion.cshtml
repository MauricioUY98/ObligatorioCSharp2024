@{
}

@using Dominio
@model Ganado

<h1 class="text-center mb-3">Asignacion de una Vacuna a un Ganado</h1>

<div class="mb-2 border-0 col-6  mx-auto">
    <strong>
        <label class="form-label">Codigo</label>
    </strong>
    <input class="form-control" value="@Model.Codigo" disabled />
</div>
<div class="mb-2 border-0 col-6  mx-auto">
    <strong>
        <label class="form-label">Tipo</label>
    </strong>
    <input class="form-control" value="@Model.ObtenerTipoDeGanado()" disabled />
</div>
<div class="mb-2 border-0 col-6  mx-auto">
    <strong>
        <label class="form-label">Sexo</label>
    </strong>
    <input class="form-control" value="@Model.Sexo" disabled />
</div>

<form action="/Peon/RealizarVacunacion" method="post">
    <input name="Codigo" value=@Model.Codigo hidden />
    <div class="mb-2 border-0 col-6  mx-auto">
        <label class="form-label">Vacunas</label>
        <select class="form-select" name="Nombre">
            <option value="" selected>Seleccione una vacuna...</option>
            @foreach (Vacuna v in Sistema.ObtenerInstancia().ObtenerListaVacuna())
            {
                <option value="@v.Nombre">@v.Nombre</option>
            }
        </select>
    </div>
    <div class="mb-2 border-0 col-6  mx-auto">
        <label class="form-label">Fecha de vacunación</label>
        <input type="date" name="FechaVacunacion" class="form-control" />
    </div>

    <div class="d-grid gap-2 col-3 mx-auto mt-3">
        <button type="submit" class="btn btn-primary align">Asignar</button>
    </div>
</form>
