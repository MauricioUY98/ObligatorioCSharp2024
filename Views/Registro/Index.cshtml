@{
}

@using Dominio
@model Residente

<h1 class="text-center text-primary">Registro</h1>

<form action="/Registro/realizarRegistro" method="post">
    
    <div class="mb-2 border-0 col-6  mx-auto">
        <label class="form-label">Nombre</label>
        <input type="text" name="Nombre" class="form-control"/>
    </div>
    <div class="mb-2 border-0 col-6  mx-auto">
        <label class="form-label">Mail</label>
        <input type="text" name="Mail" class="form-control" />
    </div>
    <div class="mb-2 border-0 col-6  mx-auto">
        <label class="form-label">Contraseña</label>
        <input type="text" name="Contraseña" class="form-control" />
    </div>
    <div class="mb-2 border-0 col-6  mx-auto">
        <label class="form-label">Residente</label>
        <select class="form-select" name="Residente">
            <option value="" selected>Seleccione una opcion...</option>
            @foreach(Residente r in Enum.GetValues(typeof(Residente)))
            {
                <option value="@r">@r</option>
            }
        </select>
    </div>
    <div class="d-grid gap-2 col-3 mx-auto mt-4">
        <button type="submit" class="btn btn-primary align">Registrarse</button>
    </div>
</form>

@if(TempData["error"] != null && (bool)TempData["error"])
{
    <div class="alert alert-danger d-grid gap-2 col-6 mx-auto mt-4 text-center" role="alert">
        @TempData["MensajeError"]
    </div>
}