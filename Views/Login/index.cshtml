@{
}

<h1 class="text-center text-primary">LOGIN</h1>

<form action="/login/realizarLogin" method="POST">
    <div class="mb-2 border-0 col-6  mx-auto">
        <label class="form-label">Email</label>
        <input type="text" name="Mail" class="form-control" value="segundoCapataz@gmail.com" />
    </div>
    <div class="mb-2 border-0 col-6 mx-auto">
        <label class="form-label">Contraseña</label>
        <input type="password" name="Contraseña" class="form-control" value="SegundoCapataz2" />
    </div>
    <div class="d-grid gap-2 col-3 mx-auto text-center">
        <button type="submit" class="btn btn-primary align">Ingresar</button>
        @Html.ActionLink("Registrarse", "Index", "Registro")
    </div>
</form>

@if (TempData["error"] != null && !(bool)TempData["error"])
{
    <div class="alert alert-success mb-2 border-0 col-6  mx-auto" role="alertdialog">
        Se registró correctamente el usuario.
    </div>
}

@if (TempData["error"] != null && (bool)TempData["error"])
{
    <div class="alert alert-danger mb-2 border-0 col-6  mx-auto" role="alert">
        @TempData["MensajeError"]
    </div>
}